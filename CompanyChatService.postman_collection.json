{
	"info": {
		"_postman_id": "a_unique_id_will_be_generated_on_import",
		"name": "CompanyChatService",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_collection_id": "a_unique_id_will_be_generated_on_import"
	},
	"item": [
		{
			"name": "Users",
			"item": [
				{
					"name": "Create User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"userId\", jsonData);",
									"console.log(\"userId set to: \" + jsonData);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"userName\": \"TestUser_{{$randomInt}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/users",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"users"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "ChatRooms",
			"item": [
				{
					"name": "Create Chat Room",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"chatRoomId\", jsonData);",
									"console.log(\"chatRoomId set to: \" + jsonData);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"General Chat Room_{{$randomInt}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/chatrooms",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"chatrooms"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get All Chat Rooms",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/chatrooms",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"chatrooms"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Messages",
			"item": [
				{
					"name": "Send Message",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"chatRoomId\": \"{{chatRoomId}}\",\n    \"content\": \"Hello from Postman! This is message {{$randomInt}}\",\n    \"senderId\": \"{{userId}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/messages",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"messages"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Messages for Room",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/rooms/{{chatRoomId}}/messages",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"rooms",
								"{{chatRoomId}}",
								"messages"
							]
						}
					},
					"response": []
				}
			]
		}
	]
}